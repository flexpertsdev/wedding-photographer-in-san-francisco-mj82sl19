---
import { Image } from '@astrojs/image/components';

interface PortfolioItem {
  src: string;
  alt: string;
  width: number;
  height: number;
}

interface Props {
  items: PortfolioItem[];
}

const { items } = Astro.props;
---

<section class="portfolio">
  <h2>Recent Weddings</h2>
  <div class="portfolio-grid">
    {items.map((item) => (
      <div class="portfolio-item">
        <Image src={item.src} alt={item.alt} width={item.width} height={item.height} format="webp" quality={75}/>
      </div>
    ))}
  </div>
</section>

<style>
.portfolio {
  padding: 3rem 0;
  text-align: center;
}

.portfolio-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Responsive columns */
  gap: 1rem;
}

.portfolio-item {
  overflow: hidden; /* Ensures images fit nicely */
  border-radius: 8px;
}

.portfolio-item img {
  width: 100%;
  height: auto;
  display: block; /* Removes extra space below images */
  transition: transform 0.3s ease; /* Add a smooth transition */
}

.portfolio-item:hover img {
  transform: scale(1.05); /* Slightly zoom on hover */
}
</style>