---
import { Image } from '@astrojs/image/components';
import classNames from 'classnames';

interface Props {
  title: string;
  subtitle: string;
  imageSrc: string;
  imageAlt: string;
  ctaText: string;
  ctaLink: string;
  className?: string; // Allow for custom classes
}

const { title, subtitle, imageSrc, imageAlt, ctaText, ctaLink, className } = Astro.props;
---

<section class={classNames("hero", className)}>
  <div class="hero-content">
    <h1>{title}</h1>
    <p>{subtitle}</p>
    <a href={ctaLink} class="button">{ctaText}</a>
  </div>
  <div class="hero-image">
    <Image src={imageSrc} alt={imageAlt} width={800} height={600} format="webp" quality={80}/>
  </div>
</section>

<style>
.hero {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  padding: 4rem 0;
  align-items: center;
}

.hero-content {
  text-align: left;
}

.hero-content h1 {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.hero-image {
  border-radius: 8px;
  overflow: hidden;
}

.button {
  display: inline-block;
  padding: 1rem 2rem;
  background-color: #007bff; /* Example color */
  color: white;
  text-decoration: none;
  border-radius: 4px;
}

/* Responsive Design */
@media (max-width: 768px) {
  .hero {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .hero-image {
    order: -1; /* Put image above content on smaller screens */
  }

  .hero-content {
    text-align: center;
  }
}
</style>