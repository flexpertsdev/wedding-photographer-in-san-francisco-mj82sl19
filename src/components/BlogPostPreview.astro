---
import { Image } from '@astrojs/image/components';

interface Props {
  title: string;
  slug: string;
  excerpt: string;
  date: string;
  imageSrc: string;
  imageAlt: string;
}

const { title, slug, excerpt, date, imageSrc, imageAlt } = Astro.props;
---

<article class="blog-post-preview">
  <a href={`/blog/${slug}`}>
    <Image src={imageSrc} alt={imageAlt} width={600} height={400} format="webp" quality={70}/>
    <h3>{title}</h3>
    <p class="date">{date}</p>
    <p class="excerpt">{excerpt}</p>
    <p class="read-more">Read More</p>
  </a>
</article>

<style>
.blog-post-preview {
  margin-bottom: 2rem;
  border: 1px solid #eee;
  border-radius: 8px;
  overflow: hidden;
}

.blog-post-preview a {
  display: block;
  padding: 1rem;
  text-decoration: none;
  color: inherit;
}

.blog-post-preview h3 {
  margin-top: 1rem;
  margin-bottom: 0.5rem;
}

.blog-post-preview .date {
  font-size: 0.8rem;
  color: #777;
  margin-bottom: 0.5rem;
}

.blog-post-preview .excerpt {
  margin-bottom: 1rem;
}

.blog-post-preview .read-more {
  font-weight: bold;
  color: #007bff;
}

.blog-post-preview img {
  width: 100%;
  height: auto;
  display: block;
}
</style>