---
interface Props {
  formId?: string;  // Optional: For use with Netlify Forms or similar
}

const { formId } = Astro.props;

const formName = formId || "contact"; // Default form name
---

<section class="contact-form">
  <h2>Get in Touch</h2>
  <form name={formName} method="POST" data-netlify="true" netlify-honeypot="bot-field">
    <input type="hidden" name="form-name" value={formName} />
    <p hidden>
      <label>Donâ€™t fill this out: <input name="bot-field" /></label>
    </p>
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required />
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required />
    </div>
    <div class="form-group">
      <label for="phone">Phone:</label>
      <input type="tel" id="phone" name="phone" />
    </div>
    <div class="form-group">
      <label for="wedding-date">Wedding Date (Optional):</label>
      <input type="date" id="wedding-date" name="wedding-date" />
    </div>
    <div class="form-group">
      <label for="message">Message:</label>
      <textarea id="message" name="message" rows="5" required></textarea>
    </div>
    <button type="submit" class="button">Send Message</button>
  </form>
</section>

<style>
.contact-form {
  padding: 3rem 0;
  text-align: center;
}

.form-group {
  margin-bottom: 1.5rem;
  text-align: left;
}

.form-group label {
  display: block;
  font-weight: bold;
  margin-bottom: 0.5rem;
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 1rem;
}

.button {
  display: inline-block;
  padding: 1rem 2rem;
  background-color: #007bff;
  color: white;
  text-decoration: none;
  border-radius: 4px;
  border: none;
  cursor: pointer;
  font-size: 1rem;
}
</style>